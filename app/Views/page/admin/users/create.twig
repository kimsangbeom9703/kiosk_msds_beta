<div id="infoMessage">{{ message | raw }}</div>
{{ form_open('admin/users/create') }}
<div class="card card-primary">
    <div class="card-header">
        <div class="card-title">
            {{ lang('Auth.create_user_heading') }}
        </div>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label for="title" class="col-sm-1 col-form-label ">ID</label>
            <div class="col-sm-11">
                {{ form_input(identity) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-1 col-form-label ">이름</label>
            <div class="col-sm-11">
                {{ form_input(all_name) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label ">비밀번호</label>
            <div class="col-sm-10">
                {{ form_input(password) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label ">비밀번호 확인</label>
            <div class="col-sm-10">
                {{ form_input(passwordConfirm) }}
            </div>
        </div>
        <hr/>
        <div class="form-group row">
            <label for="title" class="col-sm-1 col-form-label ">이메일</label>
            <div class="col-sm-11">
                {{ form_input(email) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-1 col-form-label ">연락처</label>
            <div class="col-sm-11">
                {{ form_input(phone) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-1 col-form-label ">회사명</label>
            <div class="col-sm-11">
                {{ form_input(company) }}
            </div>
        </div>
    </div>
    <div class="card-footer clearfix">
        {{ form_submit('submit', lang('Auth.create_user_submit_btn'),'class="btn btn-sm btn-success"') }}
    </div>
</div>
{{ form_close()}}