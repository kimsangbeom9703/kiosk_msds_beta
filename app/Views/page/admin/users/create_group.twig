<div id="infoMessage">{{ message | raw }}</div>
{{ form_open() }}
<div class="card card-primary">
    <div class="card-header">
        <div class="card-title">
            {{ lang('Auth.create_group_heading') }}
        </div>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label ">{{ form_label(lang('Auth.create_group_name_label'), 'group_name') }}</label>
            <div class="col-sm-10">
                {{ form_input(groupName) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="title" class="col-sm-2 col-form-label ">{{ form_label(lang('Auth.create_group_desc_label'), 'description') }}</label>
            <div class="col-sm-10">
                {{ form_input(description) }}
            </div>
        </div>
    </div>
    <div class="card-footer clearfix">
        {{ form_submit('submit', lang('Auth.create_group_submit_btn'),'class="btn btn-sm btn-success"') }}
    </div>
</div>
{{ form_close()}}